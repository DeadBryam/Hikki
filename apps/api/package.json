{
  "name": "@hikki/api",
  "version": "1.1.0",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "tsc --project tsconfig.build.json --noEmit false --outDir dist",
    "start": "bun dist/index.js",
    "test": "NODE_ENV=test bun test tests",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "bun src/scripts/run-migrations.ts"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/cron": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "awilix": "^12.0.5",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.19",
    "elysia-rate-limit": "^4.4.2",
    "logestic": "^1.2.4",
    "openai": "^6.15.0",
    "resend": "^6.9.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.8",
    "lefthook": "^2.0.15",
    "typescript": "^5.9.3",
    "ultracite": "7.0.11"
  },
  "module": "src/index.js"
}
