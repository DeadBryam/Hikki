{
  "name": "hikki",
  "private": true,
  "description": "AI Note Manager - Turborepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "check": "ultracite check",
    "typecheck": "turbo run typecheck",
    "fix": "ultracite fix",
    "prepare": "lefthook install",
    "test": "bun run --filter @hikki/api test && bun run --filter @hikki/web test",
    "db:migrate": "bun run --filter @hikki/api db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.3",
    "lefthook": "^2.1.1",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3",
    "ultracite": "7.2.3"
  },
  "packageManager": "bun@1.3.9"
}
